{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/{!(main),}.(t)s"
    ],
    "coverageDirectory": "./coverage",
    "globalSetup": "./jest.setup.e2e.global.ts",
    "setupFiles": [
        "jest-date-mock"
    ],
    "setupFilesAfterEnv": [
        "jest-extended",
        "./jest.setup.e2e.after-env.ts"
    ]
}
